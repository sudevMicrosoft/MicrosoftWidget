{
  "manifestVersion": 1,
  "id": "yaml-release-overview-widget",
  "publisher": "SudevrvMicrosoft",
  "version": "0.1.0",
  "name": "YAML Release Overview",
  "description": "Dashboard widget that summarizes YAML pipeline runs and stage status",
  "public": false,
  "targets": [{ "id": "Microsoft.VisualStudio.Services" }],
  "categories": ["Azure Boards", "Azure Pipelines"],
  "icons": { "default": "static/icon.png" },
  "contributions": [
    {
      "id": "yaml-release-overview-widget",
      "type": "ms.vss-dashboards-web.widget",
      "targets": ["ms.vss-dashboards-web.widget-catalog"],
      "properties": {
        "name": "YAML Release Overview",
        "description": "Stage/run summary for a YAML pipeline",
        "catalogIconUrl": "static/icon.png",
        "previewImageUrl": "static/preview.png",
        "uri": "dist/widget/index.html",
        "configurationUri": "dist/config/index.html",
        "supportedSizes": [{ "rowSpan": 2, "columnSpan": 2 }, { "rowSpan": 2, "columnSpan": 4 }],
        "supportedScopes": ["project_team"]
      }
    }
  ],
  "files": [
    { "path": "dist", "addressable": true },
    { "path": "static", "addressable": true },
    { "path": "node_modules/azure-devops-extension-sdk", "addressable": true, "packagePath": "lib" }
  ],
  "scopes": [ "vso.build", "vso.release" ]
}